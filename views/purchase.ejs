<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Purchase History - Bismillah Developer And Traders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      color: #fdfdfd;
      background-color: #060633;
      overflow-x: hidden; 
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 20px;
      background-color: #8B0000;
      box-shadow: 0 2px 6px rgba(0,0,0,0.4);
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      z-index: 1000;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .logo img {
      height: 40px;
      width: auto;
      border-radius: 4px;
    }

    .logo h1 {
      font-size: 18px;
      margin: 0;
      font-weight: 600;
    }

    .nav-links {
      display: flex;
      gap: 25px;
    }

    .nav-links a {
      text-decoration: none;
      color: #fff;
      font-weight: 500;
      padding: 5px 10px;
      transition: color 0.3s ease;
    }

    .nav-links a:hover {
      color: #ffd700;
    }
    
    .menu-btn {
      display: none;
      background: none;
      border: none;
      font-size: 26px;
      cursor: pointer;
      color: #fff;
    }

    .menu {
      display: none;
      position: absolute;
      top: 65px; 
      right: 25px;
      background: #1f1f1f;
      box-shadow: 0 2px 10px rgba(255,255,255,0.2);
      border-radius: 8px;
      overflow: hidden;
      min-width: 150px;
    }

    .menu.active {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    .menu a {
      display: block;
      padding: 20px 26px;
      text-decoration: none;
      color: #fff;
      font-weight: 500;
    }

    .menu a:hover {
      background: #333;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Main content styling */
    .container {
      margin-top: 80px;
      padding: 20px;
    }

    h1 {
      color: #fff;
      margin-bottom: 20px;
    }

    /* Table styling */
    .table-responsive {
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.4);
    }

    .table {
      color: #fff;
      margin-bottom: 0;
    }

    .table-dark {
      background-color: #1f1f1f;
    }

    .table-striped tbody tr:nth-of-type(odd) {
      background-color: rgba(255, 255, 255, 0.05);
    }

    .table-bordered th, .table-bordered td {
      border-color: #444;
    }

    .text-center {
      text-align: center;
    }

    .text-danger {
      color: #ff6b6b !important;
    }

    /* Mobile responsiveness */
    @media (max-width: 900px) {
      .nav-links {
        display: none;
      }

      .menu-btn {
        display: block;
      }

      .menu {
        display: none;
        position: fixed;
        top: 65px;
        right: 0;
        width: 160px;
        background: #1f1f1f;
        border-radius: 0 0 8px 8px;
        overflow: hidden;
        z-index: 9999;
      }

      .menu a {
        display: block;
        padding: 12px 16px;
        color: #fff;
        text-decoration: none;
      }

      .menu a:hover {
        background: #333;
      }

      .menu.active {
        display: block;
        animation: fadeIn 0.3s ease;
      }
    }

    @media (max-width: 768px) {
      .logo h1 {
        display: none;
      }

      .menu-btn {
        display: block;
      }

      h1 { 
        font-size: 1.5rem; 
      }
      
      .container { 
        padding: 0.5rem; 
      }
      
      .table-responsive {
        padding: 10px;
      }
      
      table th, table td { 
        font-size: 0.85rem; 
        white-space: nowrap; 
      }
    }

    @media (max-width: 480px) {
      body { 
        padding: 0.5rem; 
      }
      
      table th, table td { 
        font-size: 0.8rem; 
      }
      
      h1 { 
        font-size: 1.2rem; 
      }
    }
  
  
      /* Dropdown Menu */
.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-btn {
  color: white;
  font-weight: bold;
  cursor: pointer;
  font-size: 1.1em;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: black;
  min-width: 150px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
  padding: 10px 0;
  z-index: 200;
}

.dropdown-content a {
  color: white;
  padding: 10px 20px;
  display: block;
  text-decoration: none;
}

.dropdown-content a:hover {
  background: #333;
  color: #FFD700;
}

.dropdown:hover .dropdown-content {
  display: block;
} 
  
  </style>
</head>
<body>
  <header class="navbar">

    <div class="top-menu">
  <div class="dropdown">
    <span class="dropdown-btn">Category â–¾</span>
    <div class="dropdown-content">
      <a href="/">Home</a>
      <a href="/inventory">Goods</a>
      <a href="/purchase">Purchases</a>
      <a href="/logout">Logout</a>
    </div>
  </div>
</div>

    <div class="logo">
      <img src="https://drive.google.com/thumbnail?id=12-BANR1o6vLWay0ocn7TPkVTDVwYmoEQ&sz=w1101-1101" alt="Bismillah Developer & Traders" />
    </div>
  </header>

  <div class="container">
    <h1 class="mb-3 text-center">Purchase History</h1> <br><br>

    <!-- Table to display purchases -->
    <div class="table-responsive">
<table class="table table-bordered table-striped" id="purchasesTable">
  <thead class="table-dark">
    <tr>
      <th>Date</th>
      <th>Product Name</th>
      <th>Amount</th>
      <th>Cost/Unit</th>
       <th>Additional Cost</th>
      <th>Total Cost</th>
      <th>Status</th>
      <th>Supplier</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <!-- Rows will be injected here via JS -->
  </tbody>
</table>

    </div>
  </div>

  <script>
    // Mobile menu functionality
    document.addEventListener('DOMContentLoaded', function() {
      const menuBtn = document.getElementById('menu-btn');
      const menu = document.getElementById('menu');
      
      if (menuBtn && menu) {
        menuBtn.addEventListener('click', function() {
          menu.classList.toggle('active');
        });
        
        // Close menu when clicking outside
        document.addEventListener('click', function(event) {
          if (!menu.contains(event.target) && !menuBtn.contains(event.target)) {
            menu.classList.remove('active');
          }
        });
      }
      
      // Load purchase data
      loadPurchases();
    });


async function loadPurchases() {
  const tbody = document.querySelector('#purchasesTable tbody');
  
  // Show Loading row
  tbody.innerHTML = `<tr><td colspan="9" class="text-center"> ðŸ”„ Loading... ðŸ”„</td></tr>`;
  
  try {
    const response = await fetch('/purchases');
    const purchases = await response.json();

    tbody.innerHTML = ''; // Clear loading row

    if (purchases.length === 0) {
      tbody.innerHTML = `<tr><td colspan="9" class="text-center">No purchases found.</td></tr>`;
      return;
    }

    purchases.forEach(p => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${p.date}</td>
        <td>${p.productName}</td>
        <td>${p.amount}</td>
        <td>${p.cost}</td>
                <td>${p['additional charges'] || 0}</td>
        <td>${p.total}</td>
        <td>${p.status}</td>
        <td>${p.supplier}</td>
        <td>${p.note || ''}</td>
      `;
      tbody.appendChild(row);
    });
  } catch (err) {
    console.error('Error fetching purchases:', err);
    tbody.innerHTML = `<tr><td colspan="9" class="text-center text-danger">Failed to load purchases.</td></tr>`;
  }
}

  </script>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>