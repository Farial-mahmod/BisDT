<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login - Bismillah Developers & Traders</title>
  <style>
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background-color: #121212;
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-container {
      background-color: #1f1f1f;
      padding: 40px 30px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.4);
      width: 100%;
      max-width: 380px;
      box-sizing: border-box;
    }

    .login-container h2 {
      text-align: center;
      margin-bottom: 25px;
      font-size: 24px;
      color: #ffd700;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      font-weight: 500;
      margin-bottom: 6px;
      color: #ccc;
    }

    input {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 6px;
      background-color: #2a2a2a;
      color: #fff;
      font-size: 16px;
      box-sizing: border-box;
    }

    input:focus {
      outline: 2px solid #ffd700;
    }

    .error {
      color: #ff4c4c;
      font-size: 14px;
      margin-top: 6px;
      display: none;
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #ffd700;
      border: none;
      border-radius: 6px;
      font-size: 18px;
      font-weight: 600;
      cursor: pointer;
      color: #000;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #e6c200;
    }

    .footer-text {
      text-align: center;
      margin-top: 20px;
      font-size: 14px;
      color: #aaa;
    }

        .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 20px;
      background-color: #1f1f1f;
      box-shadow: 0 2px 6px rgba(0,0,0,0.4);
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      z-index: 1000;
    }

        .logo {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .logo img {
      height: 40px;
      width: auto;
      border-radius: 4px;
    }

    .logo h1 {
      font-size: 18px;
      margin: 0;
      font-weight: 600;
    }

    /* --------------------------------- */
    /* DESKTOP NAVIGATION STYLES (New) */
    /* --------------------------------- */
    .nav-links {
      display: flex; /* Show the links in a row on desktop */
      gap: 25px;
    }

    .nav-links a {
      text-decoration: none;
      color: #fff;
      font-weight: 500;
      padding: 5px 10px;
      transition: color 0.3s ease;
    }

    .nav-links a:hover {
      color: #ffd700; /* Subtle gold hover effect */
    }
    
    .menu-btn {
      display: none; /* Hide the mobile menu button on desktop */
      background: none;
      border: none;
      font-size: 26px;
      cursor: pointer;
      color: #fff;
    }
    /* --------------------------------- */
    /* END DESKTOP NAVIGATION STYLES */
    /* --------------------------------- */


    /* Dropdown menu (Mobile/Active State) */
    .menu {
      display: none;
      position: absolute; /* Relative to the viewport/document */
      top: 65px; 
      right: 25px; /* Position close to the edge/button */
      background: #1f1f1f;
      box-shadow: 0 2px 10px rgba(255,255,255,0.2);
      border-radius: 8px;
      overflow: hidden;
      min-width: 150px;
    }

    .menu.active {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    .menu a {
      display: block;
      padding: 20px 26px;
      text-decoration: none;
      color: #fff;
      font-weight: 500;
    }

    .menu a:hover {
      background: #333;
    }

    /* Responsive */
    @media (max-width: 500px) {
      .login-container {
        margin: 20px;
        padding: 30px 20px;
      }

      .login-container h2 {
        font-size: 22px;
      }
    }
  </style>
</head>

<body>


  <header class="navbar">
    <div class="logo">
      <img src="bismillah_golden.jpg" alt="Bismillah Developers & Traders" />
      <h1>Bismillah Developers & Traders</h1>
    </div>

    <nav class="nav-links">
      <a href="/">Home</a>
      <a href=""></a>
    </nav>
    
    <button class="menu-btn" id="menu-btn">â˜°</button>

    <div class="menu" id="menu">
      <a href="/">Home</a>
      <a href=""></a>
    </div>
  </header>


  <div class="login-container">
    <h2>Login</h2>
    <form id="loginForm" novalidate>
      <div class="form-group">
        <label for="mobile">Mobile Number</label>
        <input type="text" id="mobile" name="mobile" placeholder="01XXXXXXXXX" maxlength="11" required>
        <div class="error" id="mobileError">Please enter your registered mobile number.</div>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required minlength="6">
        <div class="error" id="passwordError">Password must be at least 6 characters long.</div>
      </div>

      <button type="submit">Login</button>
    </form>

  </div>

  <script>
    const form = document.getElementById('loginForm');
    const mobileInput = document.getElementById('mobile');
    const passwordInput = document.getElementById('password');
    const mobileError = document.getElementById('mobileError');
    const passwordError = document.getElementById('passwordError');

    form.addEventListener('submit', function(e) {
      e.preventDefault();

      let valid = true;
      mobileError.style.display = 'none';
      passwordError.style.display = 'none';

      const mobilePattern = /^01\d{9}$/;

      if (!mobilePattern.test(mobileInput.value.trim())) {
        mobileError.style.display = 'block';
        valid = false;
      }

      if (passwordInput.value.trim().length < 6) {
        passwordError.style.display = 'block';
        valid = false;
      }

// --- Inside the <script> tag in login.ejs ---

// ... (previous validation code)

if (valid) {
    // Construct the data payload from the form inputs
    const userData = {
        mobile: mobileInput.value.trim(),
        password: passwordInput.value.trim()
    };

    fetch('/login', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(userData)
    })
    .then(response => response.json())
    .then(data => {
if (data.success) {
    const userId = data.user.id;
    if (userId === 1) {
        window.location.href = '/dashboard';
    } else {
        window.location.href = '/profile';
    }
} else {
            alert('Login failed: ' + data.message); 
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert(' Please try again.');
    });
}
      

    });
  </script>
</body>
</html>
