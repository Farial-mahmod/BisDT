        /* Base Styles */
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            color: #fff;
            background-color: #121212;
            overflow-x: hidden; 
        }
        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 20px;
            background-color: #1f1f1f;
            box-shadow: 0 2px 6px rgba(0,0,0,0.4);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }
        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .logo img {
            height: 40px;
            width: auto;
            border-radius: 4px;
        }
        .logo h1 {
            font-size: 18px;
            margin: 0;
            font-weight: 600;
        }
        /* Desktop Navigation Links */
        .nav-links {
            display: flex; 
            gap: 25px;
        }
        .nav-links a {
            text-decoration: none;
            color: #fff;
            font-weight: 500;
            padding: 5px 10px;
            transition: color 0.3s ease;
        }
        .nav-links a:hover {
            color: #ffd700; 
        }
        /* Mobile Menu Button (Hidden on Desktop) */
        .menu-btn {
            display: none; 
            background: none;
            border: none;
            font-size: 26px;
            cursor: pointer;
            color: #fff;
        }
        /* Dropdown Menu (Mobile/Active State) */
        .menu {
            display: none;
            position: absolute; 
            top: 65px; 
            right: 25px; 
            background: #1f1f1f;
            box-shadow: 0 2px 10px rgba(255,255,255,0.2);
            border-radius: 8px;
            overflow: hidden;
            min-width: 150px;
            z-index: 900;
        }
        .menu.active {
            display: block;
            animation: fadeIn 0.3s ease;
        }
        .menu a {
            display: block;
            padding: 20px 26px;
            text-decoration: none;
            color: #fff;
            font-weight: 500;
        }
        .menu a:hover {
            background: #333;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        /* Hero Section (DESKTOP) */
        .hero-section {
            /* --- MODIFICATION 1 (Desktop) --- */
            /* Removed margin-top, now using padding-top to push content below fixed navbar */
            padding-top: 80px; 
            display: flex;
            justify-content: space-between;
            align-items: center;
            /* Changed to a simpler min-height to ensure content visibility */
            min-height: 50vh; 
            padding-left: 5%;
            padding-right: 5%;
            padding-bottom: 40px;
            gap: 40px;
        }
        /* Hero Text */
        .hero-text {
            flex: 1;
            max-width: 45%;
        }
        .hero-text h2 {
            font-size: 42px;
            margin-bottom: 15px;
        }
        .hero-text p {
            font-size: 18px;
            line-height: 1.6;
            color: #ddd;
        }
        /* Slider Container */
        .slider-container {
            flex: 1;
            max-width: 50%;
            height: 400px;
            min-height: 250px; 
            border-radius: 12px;
            overflow: hidden;
            position: relative;
            box-shadow: 0 4px 15px rgba(0,0,0,0.4);
        }
        .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }
        .slide.active {
            opacity: 1;
        }
        /* Image Caption */
        .caption {
            position: absolute;
            top: 15px;
            left: 15px;
            background: rgba(0,0,0,0.6);
            color: #fff;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 14px;
            z-index: 10;
            opacity: 0;
            transition: opacity 0.6s ease;
        }
        .caption.active {
            opacity: 1;
        }

        /* Responsive (Mobile) Styles */
        @media (max-width: 900px) {
            .nav-links {
                display: none; 
            }
            .menu-btn {
                display: block; 
            }
            .menu {
                top: 65px; 
                right: 20px; 
            }
            
            /* Hero Section adjustments */
            .hero-section {
                /* --- MODIFICATION 2 (Mobile Stacking) --- */
                /* This is correct: it stacks items in the order they appear (Text then Slider) */
                flex-direction: column; 
                height: auto;
                min-height: auto; 
                text-align: center;
                /* --- MODIFICATION 1 (Mobile) --- */
                /* Reduced padding-top from 100px to 80px to remove excessive space below navbar */
                padding: 80px 20px 40px 20px; 
            }

            .hero-text, .slider-container {
                max-width: 100%;
                width: 100%; 
            }
          
            .slider-container {
                height: 280px; 
                margin-top: 30px; 
            }

            .hero-text h2 {
                font-size: 32px;
            }

            .hero-text p {
                font-size: 16px;
            }
        }

        /* Footer Styles */
