<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bismillah Developer And Traders</title>
      <link rel="icon" href="https://drive.google.com/thumbnail?id=12-BANR1o6vLWay0ocn7TPkVTDVwYmoEQ&sz=w301-501" type="image/jpg">
  
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Chart.js and DataLabels plugin -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to right, CornSilk, AliceBlue, HoneyDew);
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      color: #333;
      margin: 20px 0;
      font-size: 1.8em;
    }

    /* ===== Top Menu ===== */
    .top-menu {
      width: 100%;
      background: black;
      color: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 6px rgba(0,0,0,0.3);
      position: sticky;
      top: 0;
      z-index: 100;
      flex-wrap: wrap;
    }

    .top-menu h1 { margin: 0; font-size: 1.5em; }
    .top-menu a {
      color: white;
      margin-left: 20px;
      text-decoration: none;
      font-weight: bold;
      font-size: 1em;
    }
    .top-menu a:hover { color: #FFD700; }

    /* ===== Chart + Summary ===== */
    #chartSummaryContainer {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      margin: 20px auto;
      width: 80%;
      flex-wrap: wrap;
      gap: 20px;
    }

    #chartSummaryContainer canvas {
      display: block;
      height: 300px;
      width: 100%;
      max-width: 350px;
    }

    #chartSummaryContainer .summary {
      font-size: 16px;
      line-height: 1.8;
      color: #333;
      background: white;
      padding: 15px 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    /* ===== Table ===== */
    .table-container {
      overflow-x: auto;
      width: 95%;
      margin: 20px auto;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      background: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      font-size: 14px;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
      white-space: nowrap;
    }

    th { background-color: #f2f2f2; }
    tr:nth-child(even) { background-color: #f9f9f9; }

    .status-paid { color: green; font-weight: bold; }
    .status-pending { color: orange; font-weight: bold; }
    .status-overdue { color: red; font-weight: bold; }

    .report-icon {
      cursor: pointer;
      color: #007bff;
      font-size: 18px;
    }
    .report-icon:hover { color: #0056b3; }

    /* ===== Responsive Rules ===== */
    @media (max-width: 768px) {
      h1 { font-size: 1.4em; }

      .top-menu {
        flex-direction: column;
        text-align: center;
        padding: 10px;
      }

      .top-menu a {
        display: inline-block;
        margin: 5px 10px;
        font-size: 0.95em;
      }

      #chartSummaryContainer {
        flex-direction: column;
        width: 95%;
        align-items: center;
      }

      #chartSummaryContainer .summary {
        width: 100%;
        font-size: 15px;
      }

      table { font-size: 13px; }
      th, td { padding: 8px; }
    }

    @media (max-width: 480px) {
      .top-menu a { font-size: 0.9em; }
      .summary { font-size: 14px; }
      h1 { font-size: 1.2em; }
    }

    /* Dropdown Menu */
.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-btn {
  color: white;
  font-weight: bold;
  cursor: pointer;
  font-size: 1.1em;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: black;
  min-width: 150px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
  padding: 10px 0;
  z-index: 200;
}

.dropdown-content a {
  color: white;
  padding: 10px 20px;
  display: block;
  text-decoration: none;
}

.dropdown-content a:hover {
  background: #333;
  color: #FFD700;
}

.dropdown:hover .dropdown-content {
  display: block;
}

  </style>
</head>
<body>

<div class="top-menu">
  <div class="dropdown">
    <span class="dropdown-btn">Category â–¾</span>
    <div class="dropdown-content">
      <a href="/">Home</a>
      <a href="/inventory">Goods</a>
      <a href="/purchase">Purchases</a>
      <a href="/logout">Logout</a>
    </div>
  </div>
</div>

  <h1>Admin Dashboard</h1>
  <div id="chartSummaryContainer">
    <div>
      <canvas id="paymentPie"></canvas>
    </div>
    <div class="summary">
      <div><strong>Total Collection:</strong> <%= shareholders.reduce((sum, s) => sum + (s.amount_paid || 0), 0).toLocaleString("en-US") %></div>
      <div><strong>Total Payers:</strong> <%= shareholders.filter(s => s.amount_paid > 0).length %></div>
      <div><strong>Total Defaulters:</strong> <%= 37 - shareholders.filter(s => s.amount_paid > 0).length %></div>
      <div><strong>Updated Date:</strong> <%= new Date().toLocaleDateString('en-GB') %></div>
    </div>
  </div>
  <h1>Analytics Details</h1>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Installment No.</th>
          <th>Total Shares</th>  
          <th>Paid Amount</th>
          <th>Payment Status</th>
          <th>Payment Date</th>
          <th>Due Date</th>
          <th>Edit Report</th>
        </tr>
      </thead>
      <%
  const shareMap = {
    1: 5,
    2: 3,
    9: 2,
    12: 2
  };
%>

      <tbody>
        <% if (shareholders.length === 0) { %>
          <tr><td colspan="8">No shareholders found</td></tr>
        <% } else { %>
          <% shareholders.forEach((s, index) => { %>
            <tr data-docid="<%= s.doc_id %>" data-id="<%= s.id %>">
  <td><%= index + 1 %></td>
  <td><%= s.name %></td>
  <td><%= s.installment_number %></td>

  <td><%= shareMap[index + 1] || 1 %></td>

<td><%= Number(s.amount_paid).toLocaleString("en-US") %></td>

  <td class="<%= s.status === 'paid' ? 'status-paid' : s.status === 'Pending' ? 'status-pending' : 'status-overdue' %>">
    <%= s.status %>
  </td>
  <td><%= s.payment_date %></td>
<td><%= s.due_date ? new Date(s.due_date).toLocaleDateString('en-GB') : '' %></td>
  <td><span class="report-icon" onclick="viewReport(this)">ðŸ§¾</span></td>
</tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <script>
    function viewReport(iconElement) {
      const row = iconElement.closest('tr');
      const shareholderId = row.getAttribute('data-id');
      const docId = row.getAttribute('data-docid');

      if (!shareholderId || shareholderId === "-") {
        alert("Invalid shareholder ID");
        return;
      }
      window.location.href = `/shareholder?id=${shareholderId}&doc=${docId}`;
    }

    // Pie Chart
    const totalShareholders = 37;
    const paidShareholders = <%= shareholders.filter(s => s.amount_paid > 0).length %>;
    const dueShareholders = totalShareholders - paidShareholders;

    const ctxPie = document.getElementById('paymentPie').getContext('2d');
    new Chart(ctxPie, {
      type: 'pie',
      data: {
        labels: ['Paid', 'Due'],
        datasets: [{
          data: [paidShareholders, dueShareholders],
          backgroundColor: ['green', 'red'],
          borderColor: ['darkgreen', 'darkred'],
          borderWidth: 2
        }]
      },
      options: {
        plugins: {
          legend: { position: 'bottom', labels: { font: { size: 12 } } },
          tooltip: {
            callbacks: { label: (ctx) => `${ctx.label}: ${ctx.parsed}` }
          },
          datalabels: {
            color: 'white',
            font: { weight: 'bold', size: 14 },
            formatter: (v) => v
          }
        }
      },
      plugins: [ChartDataLabels]
    });
  </script>
</body>
</html>
