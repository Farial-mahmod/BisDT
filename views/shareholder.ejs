<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
    <title>Bismillah Developer And Traders</title>
      <link rel="icon" href="https://drive.google.com/thumbnail?id=12-BANR1o6vLWay0ocn7TPkVTDVwYmoEQ&sz=w301-501" type="image/jpg">
  
  <link rel="icon" type="image/jpg" href="/bismillah_golden.jpg">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: linear-gradient(to right, #fffaf0, #f0f8ff);
    }

    h1 {
      color: #333;
      margin: 15px 10px;
      font-size: 1.6em;
    }

    .top-menu {
      width: 100%;
      background: linear-gradient(to right, #8B0000, #B22222);
      color: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 6px rgba(0,0,0,0.3);
      position: sticky;
      top: 0;
      z-index: 100;
      flex-wrap: wrap;
    }

    .top-menu a {
      color: white;
      text-decoration: none;
      margin-left: 20px;
      font-weight: bold;
      transition: color 0.3s;
    }
    .top-menu a:hover { color: #FFD700; }

    .table-wrapper {
      overflow-x: auto;
      width: 95%;
      margin: 20px auto;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    }

    table {
      border-collapse: collapse;
      width: 100%;
      font-size: 14px;
      min-width: 600px;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }

    th {
      background-color: #f2f2f2;
    }

    tr:nth-child(even) { background-color: #fafafa; }

    input {
      width: 100%;
      padding: 4px;
      box-sizing: border-box;
    }

    .edit-icon {
      cursor: pointer;
      color: blue;
      font-size: 18px;
    }
    .save-icon {
      cursor: pointer;
      color: green;
      font-size: 18px;
    }

    .custom-alert {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #fff;
      padding: 25px 30px;
      border-radius: 10px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      text-align: center;
      z-index: 1000;
    }

    .custom-alert-message {
      font-size: 1.2em;
      color: #333;
      margin-bottom: 15px;
    }

    .backdrop {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }

    @media (max-width: 768px) {
      h1 { font-size: 1.3em; text-align: center; }

      .top-menu {
        flex-direction: column;
        text-align: center;
        padding: 10px;
      }

      .top-menu a {
        display: inline-block;
        margin: 5px 10px;
        font-size: 0.95em;
      }

      table { font-size: 13px; }
      th, td { padding: 8px; }
    }

    @media (max-width: 480px) {
      h1 { font-size: 1.1em; }
      .top-menu a { font-size: 0.9em; }
      .edit-icon, .save-icon { font-size: 16px; }
    }

    /* Dropdown Menu */
.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-btn {
  color: white;
  font-weight: bold;
  cursor: pointer;
  font-size: 1.1em;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: black;
  min-width: 150px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
  padding: 10px 0;
  z-index: 200;
}

.dropdown-content a {
  color: white;
  padding: 10px 20px;
  display: block;
  text-decoration: none;
}

.dropdown-content a:hover {
  background: #333;
  color: #FFD700;
}

.dropdown:hover .dropdown-content {
  display: block;
}

  .status.paid { 
    color: green; 
    font-weight: bold;
  }
  .status.due { 
    color: red; 
    font-weight: bold;
  }

  </style>
</head>
<body>

<div class="top-menu">
  <div class="dropdown">
    <span class="dropdown-btn">Category ▾</span>
    <div class="dropdown-content">
      <a href="/dashboard">Dashboard</a>
      <a href="/inventory">Goods</a>
      <a href="/purchase">Purchases</a>
      <a href="/logout">Logout</a>
    </div>
  </div>
</div>

  <center>
    <h1><%= shareholder.name %></h1>

<div style="padding: 10px; width: 100%; max-width: 300px;">
  
    <p style="display: flex; justify-content: space-between; margin: 6px 0;">
    <b>Total Paid:</b> 
    <span id="paid"></span>
  </p>
  
  <p style="display: flex; justify-content: space-between; margin: 6px 0;">
    <b>Total Installments:</b> 
    <span><%= shareholder.total_installments %></span>
  </p>
  
  <!-- <p style="display: flex; justify-content: space-between; margin: 6px 0;">
    <b>Per Installment Amount:</b> 
    <span><%= shareholder.installment_amount.toLocaleString("en-US") %></span>
  </p> -->

  <p style="display: flex; justify-content: space-between; margin: 6px 0;">
    <b>Full Amount:</b> 
    <span id="totalAmount"></span>
  </p>

  <!-- <p style="display: flex; justify-content: space-between; margin: 6px 0;">
    <b>Outstanding Amount:</b> 
    <span id="remainingAmount"></span>
  </p> -->
</div>

    <div class="table-wrapper">
      <table id="paymentTable">
        <thead>
          <tr>
            <th>Installment No.</th>
             <th>Total Shares</th>
            <th>Amount Paid</th>
            <th>Status</th>
            <th>Payment Date</th>
            <th>Due Date</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody>
          <% shareholder.payments.forEach(payment => { %>
<tr data-installment="<%= payment.installment_number %>">
  <td><%= payment.installment_number %></td>

  <!-- NEW TOTAL SHARES COLUMN -->
  <td><%= (shareholder.installment_amount / 50000) %></td>

  <td><%= payment.amount_paid.toLocaleString("en-US") %></td>
  <td class="status <%= payment.status.toLowerCase() %>"><%= payment.status %></td>

  <td><%= payment.payment_date || "" ? new Date(payment.payment_date || "").toLocaleDateString('en-GB') : '' %></td>
  
  <td><%= payment.last_date || "" ? new Date(payment.last_date || "").toLocaleDateString('en-GB') : '' %></td>
  
  <td><span class="edit-icon" onclick="enableEdit(this)">✎</span></td>
</tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </center>

  <div id="myCustomAlert" class="custom-alert">
    <div class="custom-alert-message">Your response paper has been submitted.</div>
  </div>
  <div id="backdrop" class="backdrop"></div>

  <script>
    const shareholderId = "<%= shareholder._id %>";
    const perInstallment = parseFloat("<%= shareholder.installment_amount %>");
    const totalInstallments = 42; // fixed as requested

function calculateTotals() {
  const rows = document.querySelectorAll("#paymentTable tbody tr");
  let totalPaid = 0;
  rows.forEach(row => {
    const amount = parseFloat(row.cells[2].innerText.replace(/,/g, "")) || 0;
    totalPaid += amount;
  });
  const total = perInstallment * totalInstallments;
  const remaining = total - totalPaid;

  // Format numbers with commas
  document.getElementById("totalAmount").innerText = total.toLocaleString();
  document.getElementById("paid").innerText = totalPaid.toLocaleString();
  document.getElementById("remainingAmount").innerText = remaining.toLocaleString();
}

function enableEdit(icon) {
  const row = icon.closest('tr');
  const cells = row.querySelectorAll('td');

  // Only make Amount Paid, Status, Payment Date editable
  for (let i = 2; i <= 4; i++) {
    const value = cells[i].innerText.trim();
    cells[i].innerHTML = `<input type="text" value="${value}">`;
  }

  // Change icon to Save button
  icon.outerHTML = `<span class="save-icon" onclick="saveRow(this)">Save</span>`;
}


async function saveRow(icon) {
  const row = icon.closest('tr');
  const installmentNumber = row.getAttribute('data-installment');
  const inputs = row.querySelectorAll('input');
  let [amountPaid, status, paymentDate] = Array.from(inputs).map(i => i.value.trim());

  if (!amountPaid) amountPaid = '0';

  // If status is "due", clear payment date
  if (status.toLowerCase() === 'due') {
    paymentDate = "";
  } else if (paymentDate) {
    // Validate and format date only if status is not "due"
    const dateObj = new Date(paymentDate);
    paymentDate = isNaN(dateObj) ? "" : dateObj.toISOString().split("T")[0];
  } else {
    paymentDate = "";
  }

  const data = {
    shareholderId,
    installmentNumber: parseInt(installmentNumber),
    amountPaid: parseFloat(amountPaid),
    paymentDate, // will be empty string if status is "due"
    status
  };

  try {
    const response = await fetch('/update-installment', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    });

    await response.text();

    // Update row
    row.cells[2].innerText = parseFloat(amountPaid).toLocaleString();
    row.cells[3].innerText = status;
    row.cells[4].innerText = paymentDate; // keep string
    row.cells[5].innerHTML = `<span class="edit-icon" onclick="enableEdit(this)">✎</span>`;

    calculateTotals();
    showCustomAlert("✅ Installment updated.");
  } catch (err) {
    console.error(err);
    icon.innerText = "Save";
    showCustomAlert("✅ Installment updated.");
  }
}

function showCustomAlert(message) {
  const customAlert = document.getElementById('myCustomAlert');
  const backdrop = document.getElementById('backdrop');
  customAlert.querySelector('.custom-alert-message').innerText = message;
  customAlert.style.display = 'block';
  backdrop.style.display = 'block';
  setTimeout(() => {
    customAlert.style.display = 'none';
    backdrop.style.display = 'none';
    // Redirect to dashboard instead of reloading
    window.location.href = "/dashboard";
  }, 3000);
}

    window.onload = calculateTotals;
  </script>
</body>
</html>